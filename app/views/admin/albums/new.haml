= render "shared/internal_navbar"

.container
  %h1.font-weight-light.text-center.text-lg-left.mt-4.mb-0 Create new album
  %hr.mt-2.mb-5

.col-sm-9.col-md-7.col-lg-5.mx-auto
  = form_for @album, url: admin_albums_path, method: :POST do |f|
    .form-group
      = f.label :name, "Album name"
      = f.text_field :name, placeholder: "Name", class: "form-control"
    .form-group
      = f.label :description, "Album description"
      = f.text_area :description, placeholder: "Description", class: "form-control"
    .form-group
      = f.label :cover, "Album cover"
      = f.file_field :cover, class: "form-control-file"
    .form-group
      = f.label :cover, "Album photos"
      = f.file_field :photos, multiple: true, class: "form-control-file"
    .text-center
      = f.submit "Create", class: "btn btn-outline-success"
